@model ProyectoFinal.Models.Payment
@*

*@
@{
}
<style>
    * {
        box-sizing: border-box;
    }

    .content {
        margin-left: auto;
        margin-right: auto;
        display: grid;
        width: 100%;
        padding: 1.5em;
        margin-top: 0.5em;
    }

    .links {
        margin-top: 15px;
    }

    body {
        background-color: #f5f5f5;
        color: white;
        font-family: 'Radio Canada', sans-serif;
    }

    .logo {
        text-align: center;
        font-size: 3em;
        color: #007da4;
    }

        .logo span {
            color: #fbb03b;
        }

    .table-wrapper {
        box-shadow: 0 0 20px rgb(126 197 250);
        margin-top: 1.2em;
        display: grid;
        grid-template-columns: 1fr;
    }

        .table-wrapper > * {
            padding: 2em;
        }

    .customer-table {
        background-color: #999999;
    }

    .customer-form {
        background-color: #4d4d4d;
    }

        .customer-form form .form-item {
            margin: 0;
            padding: 1em;
        }

        .customer-form form button,
        .customer-form form input {
            width: 100%;
            border: none;
            background: none;
            border-bottom: 1px solid black;
            outline: none;
            color: white;
        }

    .customer-table table,
    .customer-table table a i {
        color: white;
    }

    .customer-form form .button input {
        background-color: #FFC366;
        border-bottom: 0;
        text-transform: uppercase;
        padding: 1em;
    }

    .form-item {
        margin: 1em;
    }

    .customer-form form {
        display: grid;
        grid-template-columns: 1fr;
    }

        .customer-form form .button input:hover,
        .customer-form form .button input:hover {
            background-color: #fbb03b;
            transition: 0.3s;
            outline: 0;
        }
</style>

<div class="content">
    <h1 class="logo"> Edit your <span> Payments</span> </h1>
    <div class="table-wrapper">
        <div class="customer-form">
            <h3> Edit Payment</h3>
            <form action="" method="post">
                <div class="form-item">
                    <label for="Id">Payment Id</label>
                    <input type="text" name="Payment.Id" id="Id" value="@Model.Id" readonly="readonly" />
                </div>
                <div class="form-item">
                    <label for="Name"> Customer Id</label>
                    <input type="text" name="Payment.CustomerId" value="@Model.CustomerId" readonly="readonly"/>
                </div>
                <div class="form-item">
                    <label for="Amount"> Amount</label>
                    <input type="text" name="Payment.Amount" id="Amount" value="@Model.Amount" />
                </div>
                <div class="form-item button">
                    <input type="submit" name="Add" value="Add" />
                </div>
            </form>
        </div>
    </div>
</div>
