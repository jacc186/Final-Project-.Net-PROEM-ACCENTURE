@model FinalProject.Models.ViewModels.PaymentModelView
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<style>
    * {
        box-sizing: border-box;
    }

    .content {
        margin-left: auto;
        margin-right: auto;
        display: grid;
        width: 100%;
        padding: 1.5em;
        margin-top: 0.5em;
    }

    .links {
        margin-top: 15px;
    }

    body {
        background-color: #f5f5f5;
        color: white;
        font-family: 'Radio Canada', sans-serif;
    }

    .logo {
        text-align: center;
        font-size: 3em;
        color: #007da4;
    }

        .logo span {
            color: #fbb03b;
        }

    .table-wrapper {
        box-shadow: 0 0 20px rgb(126 197 250);
        margin-top: 1.2em;
        display: grid;
        grid-template-columns: 2fr 1fr;
    }

        .table-wrapper > * {
            padding: 2em;
        }

    .customer-table {
        background-color: #999999;
    }

    .customer-form {
        background-color: #4d4d4d;
    }

        .customer-form form .form-item {
            margin: 0;
            padding: 1em;
        }

        .customer-form form button,
        .customer-form form input {
            width: 100%;
            border: none;
            background: none;
            border-bottom: 1px solid black;
            outline: none;
            color: white;
        }

    .customer-table table,
    .customer-table table a i {
        color: white;
    }

    .customer-form form .button input {
        background-color: #FFC366;
        border-bottom: 0;
        text-transform: uppercase;
        padding: 1em;
    }

    .form-item {
        margin: 1em;
    }

    .customer-form form {
        display: grid;
        grid-template-columns: 1fr;
    }

        .customer-form form .button input:hover,
        .customer-form form .button input:hover {
            background-color: #fbb03b;
            transition: 0.3s;
            outline: 0;
        }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        /* display: none; <- Crashes Chrome on hover */
        -webkit-appearance: none;
        margin: 0; /* <-- Apparently some margin are still there even though it's hidden */
    }

    input[type=number] {
        -moz-appearance: textfield; /* Firefox */
    }
</style>

<div class="content">
    <h1 class="logo">Payments and more <span>Payments</span></h1>
    <div class="table-wrapper">
        <div class="customer-table">
            <h3>Payments</h3>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Payment Id</th>
                        <th>Customer Id</th>
                        <th>Name</th>
                        <th>Amount</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pay in Model.PaymentsList)
                    {
                    <tr>
                        <td>@pay.Id</td>
                        <td>@pay.CustomerId</td>
                        <td>@pay.Customer.Name</td>
                        <td>@pay.Amount $.</td>
                        <td><a href="/Payment/Edit/@pay.Id"><i class="fa-solid fa-pen-to-square"></i></a></td>
                        <td><a href="/Payment/Delete/@pay.Id"><i class="fa-solid fa-trash-can"></i></a></td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="customer-form">
            <h3>Add a new Bill</h3>
            <form action="" method="post">
                <div class="form-item">
                    <label style="width: 100%;">Customer</label>
                    <select name="Payment.CustomerId" class="form-item" style="width: 60%;margin-right: 10%;">
                        @foreach (var customer in Model.Customers)
                        {
                        <option value="@customer.Id">@customer.Name</option>
                        }
                    </select>
                    <input type="number" name="Payment.Amount" placeholder="Amount" style="width: 25%;">
                </div>
                <div class="form-item button">
                    <input type="submit" value="Pay" formaction="@Url.Action("Index","Payment")" />
                </div>
            </form>
        </div>
    </div>
</div>
